extends layout

block content
  h1
    a(href="#{url}")= url
  p.results-info
    strong= results.length
    | Â results
  table
    thead
      tr
        th Test
        th YSlow score
        th Total HTTP requests
        th Page weight
        th Load time
        th HTML requests
        th Image requests
        th CSS requests
        th JS requests
        th HTML weight
        th Image weight
        th CSS weight
        th JS weight
    tbody
    - results.forEach(function (result) {
        tr
          td
            a(href="/results/#{result.id}" title="#{result.timestamp}")= result.date
          td= result.data.o
          td= result.data.r
          td= (result.data.w / 1024).toFixed(2) + ' kB'
          td= result.data.lt + ' ms'
          td= result.data.stats.doc.r
          td= result.data.stats.image.r
          td= result.data.stats.css.r
          td= result.data.stats.js.r
          td= (result.data.stats.doc.w / 1024).toFixed(2) + ' kB'
          td= (result.data.stats.image.w / 1024).toFixed(2) + ' kB'
          td= (result.data.stats.css.w / 1024).toFixed(2) + ' kB'
          td= (result.data.stats.js.w / 1024).toFixed(2) + ' kB'
    - });